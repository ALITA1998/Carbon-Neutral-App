<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布详情"
                android:background="@color/color_minefragment_top"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/aliceblue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="发布人："
                    android:textColor="@color/colorPrimary"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/activity_goods_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="游客"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/aliceblue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="碳配额："
                    android:textColor="@color/colorPrimary"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/activity_goods_carbon_bal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/ghostwhite">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="价格"
                    android:textColor="@color/mediumvioletred"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/activity_goods_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/activity_goods_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无描述"
                android:textSize="40dp"
                android:textStyle="italic"
                android:background="@color/lavenderblush"/>


            <Button
                android:id="@+id/activity_goods_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/autoget_btn_bg"
                android:text="点击购买"
                android:textSize="30sp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
