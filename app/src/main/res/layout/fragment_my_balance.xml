<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的碳配额剩余："
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/frag_my_bal_carbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/darkseagreen"
            android:textSize="30sp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/frag_my_bal_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的余额："
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/frag_my_bal_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/frag_my_bal_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frag_my_bal_text1"
            android:background="@drawable/autoget_btn_bg"
            android:text="    充值    " />

        <Button
            android:id="@+id/frag_my_bal_tixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_my_bal_money"

            android:layout_alignParentRight="true"
            android:text="    提现    "
            android:background="@drawable/autoget_btn_bg"
            />



    </RelativeLayout>





</LinearLayout>